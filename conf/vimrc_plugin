" PLUGIN VIMRC CONTENT
execute pathogen#infect()
filetype plugin indent on


" Easymotion keymaps
map <Leader> <Plug>(easymotion-prefix)
nmap J <Plug>(easymotion-bd-w)
nmap K <Plug>(easymotion-overwin-w)

"TagBar Remap
map <C-t> :TagbarToggle<CR>
command T TagbarOpen<Space>j
let g:tagbar_compact = 1

function! Numgoyo()
    :Goyo
    :set number
    :set relativenumber
endfunction

"" Goyo Remap
command G :call Numgoyo()

" FZF Remap
nmap <C-P> :Files<CR>z.
command F Files


" Commentary Changes
autocmd FileType c setlocal commentstring=//\ %s

" Lightline fix
set laststatus=2


let g:lightline = {
      \ 'colorscheme': 'monokai_tasty',
        \ 'component': {
        \   'tagbar': '%{tagbar#currenttag("[%s]", "")}',
        \ },
      \ }

" In ~/.vim/vimrc, or somewhere similar.
let g:ale_fixers = {
\   '*': ['remove_trailing_lines', 'trim_whitespace'],
\   'javascript': ['eslint'],
\   'python': ['add_blank_lines_for_python_control_statements', 'autopep8'],
\}

let g:ale_linters = {
\    'cpp': [],
\    'c': [],
\}


" Expand or shrink current highlight block
map H <Plug>(expand_region_expand)
map L <Plug>(expand_region_shrink)

" Only jump to things below for target
let g:targets_seekRanges = 'cc cr cb cB lc ac Ac lr rr lb ar ab lB Ar aB Ab AB rb rB bb bB BB'

" Use deoplete.
let g:deoplete#enable_at_startup = 1
let g:goyo_width=120

" Color scheme things
let g:solarized_termcolors=256
let g:palenight_terminal_italic=1
let g:palenight_termcolors=256

syntax enable
set background=dark

" SET COLORSCHEME
" it's worth seeint if lightline (bar at bottom) supports the theme
" let g:lightline.colorscheme = 'solarized'
let g:lightline.colorscheme = 'palenight'
"colorscheme vim-monokai-tasty
colorscheme palenight
" colorscheme solarized
